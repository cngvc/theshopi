{
  "name": "notification-service",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start ./build/src/app.js -i 2 --attach --watch | pino-pretty -c",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts | pino-pretty -c",
    "prettier:check": "prettier --check 'src/**/*.{ts,json}'",
    "prettier:fix": "prettier --write 'src/**/*.{ts,json}'",
    "build": "rm -rf build && tsc --project tsconfig.json && tsc-alias -p tsconfig.json && ts-node tools/copyAssets.ts",
    "test": "jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@cngvc/shopi-shared": "^0.0.4",
    "@cngvc/shopi-types": "^0.0.9",
    "amqplib": "^0.10.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "elastic-apm-node": "^4.11.0",
    "email-templates": "^12.0.1",
    "express": "^4.21.2",
    "express-async-errors": "^3.1.1",
    "nodemailer": "^6.10.0",
    "pino-pretty": "^13.0.0",
    "shelljs": "^0.8.5"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/amqplib": "^0.10.7",
    "@types/email-templates": "^10.0.4",
